<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFridge.MainPage"
             Title="Home">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Button x:Name="GoToFridges" Text="Manage fridges" Clicked="GoToFridges_Clicked"/>
            <Button x:Name="GoToDrinks" Text="Add a drink" Clicked="GoToDrinks_Clicked"/>
            <Button x:Name="AllFridges" Text="Fridge overview" Clicked="AllFridges_Clicked"/>
            <Button x:Name="GoToQrPage" Text="Scan a prodcut" Clicked="GoToQrPage_Clicked"/>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
