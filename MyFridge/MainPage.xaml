<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFridge.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Button x:Name="GoToFridges" Text="Add Fridge" Clicked="GoToFridges_Clicked"/>

            <Button x:Name="GoToDrinks" Text="Add Drink" Clicked="GoToDrinks_Clicked"/>

            <Button x:Name="AllFridges" Text="All Fridges" Clicked="AllFridges_Clicked"/>
            <Button x:Name="GoToQrPage" Text="Go to qr scanner" Clicked="GoToQrPage_Clicked"/>
            <Button x:Name="Test" Text="Test" Clicked="Test_Clicked"/>
            

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
