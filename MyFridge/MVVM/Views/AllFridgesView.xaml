                            --><!--<Label Text="{Binding drinkImage}"/>--><!--
                            <Image Source="{Binding drinkImage}" HeightRequest="40" WidthRequest="40"/>
                            <Label Text="{Binding name}" Grid.Column="1" />
                            <Label Text="{Binding quantity}" Grid.Column="2"  />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>-->
        <Button x:Name="TakeDrinkButton" Text="Take drink" Clicked="TakeDrinkButton_Clicked"/>
        <Button x:Name="DeleteDrinkButton" Text="Delete" BackgroundColor="Red" Command="{Binding DeleteSelectedDrinkCommand}"/>
        
    </VerticalStackLayout>
</ContentPage>